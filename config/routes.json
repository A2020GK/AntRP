{
    "home":{
        "controller":"Home::index",
        "path":"/",
        "method":"GET"
    },
    "user":{
        "login":{
            "controller":"User::login",
            "path":"/login",
            "method":"GET"
        },
        "handler":{
            "login":{
                "controller":"User::handle_login",
                "path":"/login",
                "method":"POST"
            }
        }
    },
    "character":{
        "view":{
            "controller":"Character::view",
            "path":"/characters/{id}",
            "method":"GET"
        },
        "list":{
            "controller":"Character::list",
            "path":"/characters",
            "method":"GET"
        },
        "edit":{
            "controller":"Character::edit",
            "path":"/characters/{id}/edit",
            "method":"GET"
        },
        "handler":{
            "edit":{
                "controller":"Character::handle_edit",
                "path":"/characters/{id}/edit",
                "method":"POST"
            }
        }
    },
    "chat":{
        "controller":"Chat::index",
        "path":"/chat",
        "method":"GET"
    },
    "error":{
        "controller":"Home::index",
        "path":"/_error",
        "method":"any"
    }
}